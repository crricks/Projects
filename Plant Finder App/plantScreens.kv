<ScreenManagement>:
    FindOptions:
    All:
    Colors:


<FindOptions>:
    name: 'find'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Find By'
        Button:
            text: 'Color'
            on_press: root.manager.current = 'colors'
        Button:
            text: 'Zone'
        Button:
            text: 'Name'
        Button:
            text: 'Family'
        Button:
            text: 'See all'
            on_press: root.manager.current = 'all'

<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<RV>:
    RecycleBoxLayout:
        canvas:
            Color:
                rgba: 255, 255, 255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        viewclass: 'SelectableButton'
        orientation: 'vertical'
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<ColorButton>:
    on_press: root.manager.current = 'showColor'

<Colors>:
    name: 'colors'
    BoxLayout:
        orientation: 'vertical'
        ColorButton:
            text: 'Green'
        ColorButton:
            text: 'Yellow'
        ColorButton:
            text: 'White'
        ColorButton:
            text: 'Red'
        ColorButton:
            text: 'Pink'
        ColorButton:
            text: 'Orange'
        ColorButton:
            text: 'Blue'
        Button:
            text: 'Back'
            on_press: root.manager.current = 'find'

<ShowByColor>:
    name: 'showColor'

<ColorToZone>:

<ColorToHabitat>:

<ColorToFamily>:

<ZoneToColor>:

<ZoneToHabitat>:

<ZoneToFamily>:

<SearchByName>:

<FamilyToColor>:

<All>:
    name: 'all'
    BoxLayout:
        orientation: 'vertical'
        RV:
            id: all
            data: [{'text': str(x)} for x in root.allPlants]
        Button:
            text: 'Back'
            on_press: root.manager.current = 'find'



